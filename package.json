{
  "name": "cosmus-art",
  "version": "1.0.0",
  "description": "Reposit√≥rio do meu projeto pessoal CosmusArt, uma rede social de artistas",
  "main": "index.js",
  "scripts": {
    "next": "next dev",
    "dev": "npm run services:up && npm run wait-postgres && npm run migration:up && next dev",
    "services:up": "docker compose -f infra/compose.yaml up -d",
    "services:stop": "docker compose -f infra/compose.yaml stop",
    "services:down": "docker compose -f infra/compose.yaml down",
    "lint:check": "prettier --check .",
    "lint:fix": "prettier --write .",
    "migration:create": "node-pg-migrate -m infra/migrations create",
    "migration:up": "node-pg-migrate -m infra/migrations --envPath .env.development up",
    "migration:down": "node-pg-migrate -m infra/migrations --envPath .env.development down",
    "test": "jest --runInBand",
    "test:watch": "jest --watchAll --runInBand",
    "wait-postgres": "node infra/scripts/wait_postgres.js",
    "psql": "psql -h localhost -p 5432 -U local_user -W -d local_db"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^16.4.5",
    "next": "^13.1.6",
    "node-pg-migrate": "^7.5.2",
    "perf_hooks": "^0.0.1",
    "pg": "^8.11.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "prettier": "^3.3.2"
  }
}
